@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    <h1>Hello, Knockout.js</h1>

    <p><span data-bind='text: firstName'></span>'s Shopping Cart</p>
    <p><span data-bind='text: fullName'></span>'s Shopping Cart</p>
    <p><span data-bind='html: featuredProduct().formattedName'></span></p>
    <p data-bind='with: featuredProduct'>
        Do you need <strong data-bind='text: name'></strong>? <br />
        Get one now for only <strong data-bind='text: price'></strong>.
    </p>
    <button data-bind='click: checkout'>Checkout</button><button data-bind='click: addProduct'>Add Beer</button>
</div>

<hr />

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>

        </tr>
    </thead>
    <tbody data-bind='foreach: shoppingCart'>
        <tr>
            <td data-bind='text: name'></td>
            <td data-bind='text: price'></td>
            <td>
                <!-- Add a list of tags. -->
                <ul data-bind="foreach: tags">
                    <li>
                        <span data-bind="text: $parent.name"></span> - <span data-bind="text: $data"></span>
                    </li>
                </ul>
            </td>
            <td data-bind='text: $index'></td>
            <td data-bind='if: discount() > 0' style='color: red'> You saved <span data-bind='text: formattedDiscount'></span>!!! </td>
            <td><button data-bind='click: $root.removeProduct'>Remove</button></td>
        </tr>
    </tbody>
</table>

